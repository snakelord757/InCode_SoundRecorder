<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sad_emoji"
        android:text="@string/sad_emoji"
        android:textColor="@android:color/black"
        android:textSize="@dimen/emoji_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/record_folder_empty_message"
        android:text="@string/record_folder_is_empty"
        android:textSize="@dimen/record_folder_empty_message_text_size"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/record_folder_empty_message_margin_top"
        app:layout_constraintTop_toBottomOf="@id/sad_emoji" />

</androidx.constraintlayout.widget.ConstraintLayout>